.todo-add
    padding 0 15px

    &__form
        position relative
        display flex

    &__input
        outline none
        border none
        padding 5px
        width 100%
        font-size 14px

        &:focus
            + .todo-add__input-line
                &::after
                    left 0
                    right 25px
                    width 100%

    &__input-line
        position absolute
        bottom 0
        left 0
        right 25px
        height 2px
        background-color #009688

        &::after
            content ''
            position absolute
            left 50%
            right 50%
            width 0
            height 2px
            background-color #004d40
            transition all 300ms

    &__button
        background none
        border none
        outline none
        font-size 25px
        color  #009688
        cursor pointer
        transition color 300ms

        &:hover,
        &:focus
            color #004d40